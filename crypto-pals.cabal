build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Lib
  build-depends:       base >= 4.7 && < 5
                     , bytestring
                     , base64-bytestring
                     , base16-bytestring
                     , containers
                     , linear
                     , cassava
                     , vector
                     , text
  default-language:    Haskell2010

executable crypto-pals-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , crypto-pals
  default-language:    Haskell2010

test-suite crypto-pals-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , crypto-pals
                     , bytestring
                     , tasty
                     , tasty-hunit
                     , containers
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/tsenart/crypto-pals
